<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gallery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Surface</item>
        <item name="tabStyle">@style/Theme.Gallery.Tab</item>

    </style>

    <style name="Theme.Gallery.Tab" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/Theme.Gallery.TextAppearance.TabTitle</item>
        <item name="tabIndicatorColor">@color/green</item>
        <item name="android:background">?colorSurface</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Gallery.TextAppearance.TabTitle" parent="">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>